if (user == ‘Adimin’){
 let password = prompt(‘비밀번호’, ‘ ‘ );
 if (password == ‘TheMaster’){
alert( ‘환영합니다!’);
} else if (password == ‘ ‘ || pass == null){
   alert(‘취소되었습니다.’);
